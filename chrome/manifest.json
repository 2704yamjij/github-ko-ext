{
  "manifest_version": 2,
  "name": "GitHub 한글화",
  "short_name": "github_ko",
  "version": "0.1.5",
  "description": "Translates pages at GitHub.com into Korean. After the installation, visit GitHub then you see the pages re-written in Korean.",
  "author": "https://github.com/hatemogi/github-ko-ext",
  "homepage_url": "https://github.com/hatemogi/github-ko-ext",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["https://*.github.com/*"],
    "css": ["github-ko.css"],
    "js": ["github-ko.js"]}],
  "permissions": ["tabs", "background", "webRequest", "*://*.github.com/"],
  "web_accessible_resources": ["fonts/*.ttf"]
}
