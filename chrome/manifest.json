{
  "manifest_version": 2,
  "name": "GitHub 한글화",
  "version": "0.1.2",
  "description": "GitHub 사이트의 주요 부분을 한글로 표시해주는 확장 프로그램입니다.",
  "author": "https://github.com/hatemogi/github-ko-ext",
  "homepage_url": "https://github.com/hatemogi/github-ko-ext",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [{
    "matches": ["https://*.github.com/*"],
    "css": ["github-ko.css"],
    "js": ["github-ko.js"]}],
  "permissions": ["tabs", "background", "webRequest", "*://*.github.com/"],
  "web_accessible_resources": ["fonts/*.ttf"]
}
